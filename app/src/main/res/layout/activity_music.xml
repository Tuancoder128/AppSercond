<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#56a8ea"
    android:id="@+id/manHinh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.smc.appsercond.Music">

    <TextView
        android:textColor="#0a0dea"
        android:id="@+id/textViewLoiNhan"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_marginTop="14dp"
        android:id="@+id/relativeToolSB"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/textViewLoiNhan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            
            android:text="0"
            android:id="@+id/txtCurentTime"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <SeekBar
            android:layout_marginRight="10dp"
            android:id="@+id/sbAudio"
            android:layout_width="match_parent"
            android:layout_height="30dp"

            />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/txtTotalTime"
            android:text="3"
            android:layout_width="20dp"
            android:layout_height="20dp" />


    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linnerlayoutTool"
        android:layout_marginTop="10dp"
        android:weightSum="3"
        android:layout_below="@id/relativeToolSB"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageButton
            android:id="@+id/ibtBack"
            android:layout_weight="1"
            android:src="@drawable/ic_skip_previous_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/ibtPlay"
            android:layout_weight="1"
            android:src="@drawable/ic_check_box_outline_blank_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/ibtNext"
            android:layout_weight="1"
            android:src="@drawable/ic_skip_next_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linnerlayoutZalo"
        android:layout_marginTop="5dp"
        android:weightSum="3"
        android:layout_below="@id/linnerlayoutTool"
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <Button
            android:textColor="#f2085a"
            android:id="@+id/btnGhiAm"
            android:layout_weight="1"
            android:text="Ghi ÂM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:textColor="#f2085a"
            android:id="@+id/btnXong"
            android:layout_weight="1"
            android:text="Xong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:textColor="#f2085a"
            android:id="@+id/btnGui"
            android:layout_weight="1"
            android:text="Gửi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <ListView

        android:id="@+id/ListViewBaiHat"
        android:layout_below="@id/linnerlayoutZalo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
    




</RelativeLayout>
